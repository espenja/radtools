{
	"configurations": [
		{
			"name": "TS file",
			"type": "pwa-node",
			"request": "launch",
			"args": ["${fileBasename}"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${fileDirname}",
			"outputCapture": "std"
		},
		{
			"name": "Client",
			"type": "pwa-node",
			"request": "launch",
			"args": ["${workspaceFolder}/packages/web-client/scripts/dev.ts"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${workspaceFolder}/packages/web-client",
			"outputCapture": "std"
		},
		{
			"name": "Server",
			"type": "pwa-node",
			"request": "launch",
			"args": ["${workspaceFolder}/packages/web-server/src/index.ts"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${workspaceFolder}/packages/web-server",
			"outputCapture": "std"
		}
	],
	"compounds": [
		{
			"name": "Server/Client",
			"configurations": ["Server", "Client"],
			"stopAll": true
		}
	]
}